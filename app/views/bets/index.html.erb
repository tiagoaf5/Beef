<h1>Listing bets</h1>

<table>
  <thead>
    <tr>
      <th>Team1 goals</th>
      <th>Team2 goals</th>
      <th>Score</th>
      <th>User</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.team1_goals %></td>
        <td><%= bet.team2_goals %></td>
        <td><%= bet.score %></td>
        <td><%= bet.user %></td>
        <td><%= bet.game %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bet', new_bet_path %>
