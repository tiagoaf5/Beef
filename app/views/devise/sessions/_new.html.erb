<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email" , class: "form-control" %></div>

    <div><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %></div>

    <br>

    <div><%= f.submit "Sign in", class: "btn btn-block btn-lg btn-primary" %></div>

    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

<% end %>

<%= render 'devise/shared/links' %>
