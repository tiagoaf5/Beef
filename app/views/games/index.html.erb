<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Team1 name</th>
      <th>Team2 name</th>
      <th>Team1 goals</th>
      <th>Team2 goals</th>
      <th>Time</th>
      <th>Championship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.team1_name %></td>
        <td><%= game.team2_name %></td>
        <td><%= game.team1_goals %></td>
        <td><%= game.team2_goals %></td>
        <td><%= game.time %></td>
        <td><%= game.championship %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

