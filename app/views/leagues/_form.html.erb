  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'name form-control', :required => true %>
  </div>
  <div class="field">
    <%= f.label :score_correct %> <i title="The points users will gain when they make a correct prediction on a matches result" class="glyphicon glyphicon-question-sign score_correct_helper"></i><br>
    <%= f.number_field :score_correct, :class => 'name form-control', :oninvalid => 'setCustomValidity(Please enter a number)', :pattern => '\d+', :required => true %>
  </div>
  <div class="field">
      <%= f.label :score_difference %> <i title="The points users will gain when they make a correct prediction on a matches goal difference" class="glyphicon glyphicon-question-sign score_correct_helper"></i><br>
      <%= f.number_field :score_difference, :class => 'name form-control', :required => true, :pattern => "\d+" %>
  </div>
  <div class="field">
    <%= f.label :score_prediction %> <i title="The points users will gain when they make a correct prediction on a matches result" class="glyphicon glyphicon-question-sign score_correct_helper"></i><br>
    <%= f.number_field :score_prediction, :class => 'name form-control', :required => true, :pattern => "\d+" %>
  </div>
    <div id="friends-container" class="field">
        <%= f.hidden_field :users %>
        <div>
            <label for="friends">Friends</label>
        </div>
        <input id="friends" class="form-control" type="text"/>
        <span id="friends_added"></span><br>
        <button type="button" class="add_friend btn">Add</button>
    </div>
    <div id="championship-container" class="field">
        <%= f.hidden_field :championships %>
        <div>
            <label for="championship">Championships</label>
        </div>
        <input id="championship" class="form-control" type="text"/>
        <span id="championships_added"></span><br>
        <button type="button" class="add_championship btn">Add</button>
    </div>
    <div class="actions">
        <%= f.submit 'Create New League', :class => 'button-sub btn btn-send'%>
    </div>
<% end %>