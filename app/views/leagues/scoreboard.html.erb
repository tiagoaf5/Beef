  <h2>Leaderboard</h2>
  <table class="table table-responsive">
    <thead class="text-center">
    <tr>
      <th>User</th>
      <th>Total</th>
      <% @match_days.each do |matchday| %>
          <th>Match day <%= matchday %></th>
      <% end %>
    </tr>
    </thead>
    <tbody class="">
    <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <% @score[user.id].each do |score| %>
              <td><%= score %> </td>
          <% end %>
        </tr>
    <% end %>
    </tbody>

  </table>
  <%= @score.as_json%>
  <h1><%= @matchdays %></h1>
  <h2><%= @nabo %></h2>
</div>



