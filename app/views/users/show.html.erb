<div class="row mt">
<div class="col-lg-12">
  <div class="row content-panel">
    <div class="col-sm-4 centered">
      <div class="profile-pic">
        <p><%= image_tag "ui-sam.jpg", {class: "img-circle", width: "90"} %></p>
      </div>
    </div><! --/col-md-4 -->

    <div class="col-sm-4 profile-text"> <!-- top: user information -->
      <h3><%= @name %>Nome giro</h3>
      <h5><%= @email %></h5>
      <br><br>
      <% if @owner==1 %>
        <p><button class="btn btn-theme"><i class="fa fa-cogs"></i> Edit profile</button></p>
      <% end %>
    </div><! --/col-md-4 -->
  </div>
  <div class="row content-panel"></div>
  </div><! --/col-lg-12 -->

  <div class="col-lg-12 mt">
    <div class="row content-panel">
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
              <li class="active">
                <a data-toggle="tab" href="#statistics">Statistics</a>
              </li>
              <% if @friend==1 %>
                  <li>
                    <a data-toggle="tab" href="#my_leagues">Leagues</a>
                  </li>
              <% end %>
              <% if @owner==1 %>
                <li>
                    <a data-toggle="tab" href="#my_leagues">My leagues</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#buddies">Buddies</a>
                </li>
              <% end %>
            </ul>
        </div><! --/panel-heading -->

        <div class="panel-body">
            <div class="tab-content">

              <div id="statistics" class="tab-pane active">

                  <div class="row centered mt mb">
                    <div class="col-md-7 col-xs-12">
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-trophy"></i></h1>
                      <h3><%= @my_leagues.length %></h3>
                      <h6><% if @my_leagues.length==1%>
                            LEAGUE
                          <% else %>
                            LEAGUES
                          <% end %> </h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-dribbble"></i></h1>
                      <h3>37</h3>
                      <h6>GAMES</h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-money"></i></h1>
                      <h3> <%= @stats["size"] %> </h3>
                      <h6><% if @stats["size"]==1%>
                            BET
                        <% else %>
                            BETS
                        <% end %> </h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-users"></i></h1>
                      <h3> <%= @buddies_leagues.length %> </h3>
                      <h6><% if @buddies_leagues.length==1%>
                            BUDDY
                        <% else %>
                            BUDDIES
                        <% end %> </h6>
                    </div>
                <div class="row centered mt mb hidden-xs">
                  </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-smile-o"></i></h1>
                      <h3><%= @stats["won"] %> </h3>
                      <h6>BETS CORRECT</h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-check-circle"></i></h1>
                      <h3><%= @stats["prediction"] %></h3>
                      <h6>BETS PREDICTION</h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-check-circle-o"></i></h1>
                      <h3><%= @stats["difference"] %></h3>
                      <h6>BETS DIFFERENCE</h6>
                    </div>
                    <div class="col-sm-3 col-xs-4">
                      <h1><i class="fa fa-frown-o"></i></h1>
                      <h3><%= @stats["lost"] %></h3>
                      <h6>BETS LOST</h6>
                    </div>

                </div><! --/row -->

                <div class="col-md-5 hidden-sm hidden-xs">
                <div id="hero-donut" class="graph">
                  <svg height="330" version="1.1" width="450" xmlns="http://www.w3.org/2000/svg" style="overflow: scroll; position: relative;">
