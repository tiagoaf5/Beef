                    <path fill="none" stroke="#2980b9" d="M367.9999996638166,173.50856083997223A109,109,0,0,0,172.62725385519667,107.01128875210951" stroke-width="2" opacity="0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0); opacity: 0;"></path>
                      <path fill="#2980b9" stroke="#ffffff" d="M370.99999965456385,173.508796459421A112,112,0,0,0,170.25002230992683,105.18132422235105L133.40293335824467,76.81687401109501A158.5,158.5,0,0,1,417.49999951114614,173.51244856087703Z" stroke-width="3" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);"></path>
                    <path fill="none" stroke="#34495e" d="M172.62725385519667,107.01128875210951A109,109,0,0,0,192.50450525756543,259.8675238672434" stroke-width="2" opacity="1" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0); opacity: 1;"></path>
