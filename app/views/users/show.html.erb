<div class="row mt">
<div class="col-lg-12">
  <div class="row content-panel">
    <div class="col-sm-4 centered">
      <div class="profile-pic">
        <p><%= image_tag "ui-sam.jpg", {class: "img-circle", width: "90"} %></p>
      </div>
    </div><! --/col-md-4 -->

    <div class="col-sm-4 profile-text"> <!-- top: user information -->
      <h3><%= @name %>Nome giro</h3>
      <h5><%= @email %></h5>
      <br><br>
      <p><button class="btn btn-theme"><i class="fa fa-cogs"></i> Edit profile</button></p>
    </div><! --/col-md-4 -->
  </div>
  <div class="row content-panel"></div>
  </div><! --/col-lg-12 -->

  <div class="col-lg-12 mt">
    <div class="row content-panel">
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a data-toggle="tab" href="#my_leagues">My leagues</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#statistics">Statistics</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#buddies">Buddies</a>
                </li>
            </ul>
        </div><! --/panel-heading -->

        <div class="panel-body">
            <div class="tab-content">
                <div id="my_leagues" class="tab-pane active">
                  <div class="row mt">
                    <div class="col-sm-10 col-md-offset-1">
                      <div class="content-panel">
                        <table class="table table-striped table-advance table-hover">
                          <thead>
                          <tr>
                            <th class="centered"><i class="fa fa-dribbble"></i> League</th>
                            <th class="centered"><i class="fa fa-crosshairs"></i> Current score</th>
                          </tr>
                          </thead>
                          <tbody>
                          <tr>
                            <% @my_leagues.each do |league| %>
                                <td><%= league[1] %></td>
                                <% if league[2]!=nil %>
                                    <td class="centered"><%= league[2] %></td>
                                <% else %>
                                    <td class="centered">0</td>
                                <% end %>
                            <% end %>
                          </tr>
                          </tbody>
                        </table>
                      </div><!-- /content-panel -->
                    </div><!-- /col-md-10 -->
                    <div class="col-md-1"></div>
                  </div><!-- /row -->
                </div><! --/tab-pane -->

                <div id="statistics" class="tab-pane">
                    <div class="row">

                    </div><! --/row -->
                </div><! --/tab-pane -->

                <div id="buddies" class="tab-pane">
                    <div class="row">
                      <div class="col-lg-12">
                        <% @buddies_leagues.each do |buddy, leagues| %>
                        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                          <div class="custom-box">
                            <div class="servicetitle">
                              <% if buddy.name!=nil %>
                                  <h4><%= buddy.name %></h4>
                              <% else %>
                                  <h4><%= buddy.email %></h4>
                              <% end %>
                              <hr>
                            </div>
                            <div class="icn-main-container">
                              <p><%= image_tag "ui-sam.jpg", {class: "img-circle", width: "90"} %></p>
                            </div>
                            <ul class="pricing">
                              <% leagues.each do |league| %>
                                <li><%= league %></li>
                              <% end %>
                            </ul>
                          </div><!-- end custombox -->
                        </div><!-- end col-4 -->
                        <%end %>
                        </div>
                    </div><! --/row -->
                </div><! --/tab-pane -->
            </div><!-- /tab-content -->

        </div><! --/panel-body -->

  </div><!-- /col-lg-12 -->
</div><! --/row -->

